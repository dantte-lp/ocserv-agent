{{ test_user_name }} ALL=(ALL) NOPASSWD: /bin/systemctl restart ocserv-agent
{{ test_user_name }} ALL=(ALL) NOPASSWD: /bin/systemctl status ocserv-agent
{{ test_user_name }} ALL=(ALL) NOPASSWD: /bin/systemctl reload ocserv-agent
